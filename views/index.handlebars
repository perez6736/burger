
<div class="container container-body">
    <div class="row">
        <ol class="newBurgers col-sm-3 col-md-3 col-lg-3">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devour=true}}
                {{/unless}}
            {{/each}}
        </ol>
    
        <div class="burger-input col-sm-5 col-md-5 col-lg-5">

            <img class= "burger-img" src="/assets/images/cartoon-burger.png" alt="burger">
            <p class="title">
                Eat - the - Burger! 
            </p>
            <form id="new-burger-form">
                <input id="newBurger"></input>

                <button type="submit" class=" btn btn-primary" id="submit">
                    Add new Burger
                </button>
            </form>
            <p id="instructions">
                Enter a burger and click "Add new burger"
            </p>
            <p id="error"></p>
        </div>
    
        <ol class="devouredBurgers col-sm-4 col-md-4 col-lg-4">
            {{#each burgers}}
                {{#if devoured}}
                    <li class="burgers"> 
                        {{burger_name}} 
                    </li>
                {{/if}}
            {{/each}}
        </ol>
    


    </div>

</div>


